{% extends 'base2.html.twig' %}

{% block title %}Hello CommentController!{% endblock %}

{% block body %}
<div class="col-lg-12">
    {{form_start(f)}}
		
		<form class="comment-form my-5" id="comment-form">
			<h4 class="mb-4">Write a comment</h4>
			<div class="row">
				<div class="col-md-6">
					<div class="form-group">
                        {{form_widget(f.name_comment,{'att':{ 'name':'name' , 'id':'name', 'type':'text', 'class':'form-control'}})}}
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-group">
                        {{form_widget(f.mail_comment,{'att':{ 'name':'mail' , 'id':'mail', 'type':'text', 'class':'form-control'}})}}
					</div>
				</div>
			</div>


			
            {{form_widget(f.contenu_comment,{'type':'textarea','class':'form-control mb-4','placeholder':'Comment','rows':'12'})}}
            <div style="display: none;">

                {{form_widget(f.likes_comment)}}
                {{form_widget(f.dislikes_comment)}}
                {{form_widget(f.datecreation_comment)}}
                {{form_widget(f.id_post)}}
                {{form_widget(f.id_comment)}}
            </div>

			<!-- <input class="btn btn-main-2 btn-round-full" type="submit" name="submit-contact" id="submit_contact" value="Submit Message"> -->
            {{form_end(f)}}
		</form>
	</div>
{% endblock %}
