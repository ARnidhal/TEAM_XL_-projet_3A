{% extends 'base.html.twig' %}

{% block title %}Evenement index{% endblock %}

{% block body %}
    <h1>Listes des evenements</h1>
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="page-header">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                    </ol>
                </nav>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <form name="Search-method" id="Search-method" method="post" class="forms-sample">
                        <div class="input-group">
                            <input name="Search" type="text" class="form-control" placeholder="Search Events" aria-label="Recipient's username" aria-describedby="basic-addon2" style="width: 250px;">
                            <select name="optionsearch" class="js-example-basic-single form-control" style="color: white; background-color: #191c24; border-radius: 4px; text-align: center; border: 2px solid #0090e7; width: 0px; padding: 6px 10px;">

                                <option value="">Crit√®re</option>
                                <option value="nomEvenement">Nom</option>
                                <option value="typeEvenement">Lieu</option>
                                <option value="dateDebut">Debut</option>
                                <option value="dateFin">Fin</option>
                            </select>
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="submit">
                                    <i class="fa fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
                
            </div>

            <form method="post" class="forms-sample">
                <div class="form-group col-md-4" style="display: flex; width: 100%!important; margin: 0px!important;">
                    <div class="form-check">
                        <label class="form-check-label" style="width: 92px;margin-left: -2px;margin-right: 10px;">
                            <input type="radio" class="form-check-input" name="optionsRadios" id="optionsRadios1" value="nomEvenement">Nom</label>
                    </div>
                    <div class="form-check">
                        <label class="form-check-label" style="width: 86px;margin-left: -2px;margin-right: 10px;">
                            <input type="radio" class="form-check-input" name="optionsRadios" id="optionsRadios2" value="typeEvenement">Type</label>
                    </div>
                    <div class="form-check">
                        <label class="form-check-label" style="width: 86px;margin-left: -2px;margin-right: 10px;">
                            <input type="radio" class="form-check-input" name="optionsRadios" id="optionsRadios3" value="dateDebut">Date Debut</label>
                    </div>
                    <button type="submit" class="btn btn-success btn-fw" style="margin: auto;">Sort</button>
                </div>
            </form>

            
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Image</th>
                            <th>Type</th>
                            <th>Nom</th>
                            <th>Lieu</th>
                            <th>Sponsor</th>
                            <th>DateDebut</th>
                            <th>DateFin</th>
                            <th>Participants</th>
                            <th>show</th>
                            <th>edit</th>
                            <th>Localisation</th>
                            <th>QR code</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for evenement in evenements %}
                        <tr>
                            <td>{{ evenement.id }}</td>
                            <td><img src="{{ asset('uploads/' ~ evenement.imageEvenement) }}" style="width:150px; height:150px;" alt=""></td>
                            <td>{{ evenement.typeEvenement }}</td>
                            <td>{{ evenement.nomEvenement }}</td>
                            <td>{{ evenement.lieuEvenement }}</td>
                            <td>{{ evenement.Sponsor }}</td>
                            <td>{{ evenement.dateDebut ? evenement.dateDebut|date('Y-m-d H:i') : '' }}</td>
                            <td>{{ evenement.dateFin ? evenement.dateFin|date('Y-m-d H:i') : '' }}</td>
                            <td>{{ evenement.nbParticipants }}</td>
                            <td><a href="{{ path('app_evenement_show', {'id': evenement.id}) }}"><i class="fa-solid fa-eye"></i></a></td>
                            <td><a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}"><i class="fa-solid fa-pen-to-square"></i></a></td>
                            <td><a href="{{ path('app_evenement_map', {'id': evenement.id}) }}" class="btn btn-info rounded-pill m-2" ><i class="fas fa-location-arrow"></i></a></td>
                            <td><a href="{{ path('app_qr_codes', {'id': evenement.id}) }}">qr code</a></td>
                            
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="9">no records found</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
                <div class="mt-4">
                    <a href="{{ path('app_evenement_new') }}" class="btn btn-primary px-3 py-1">Create new</a> 
                    <a href="{{ path('generator_service3') }}" class="btn btn-primary px-3 py-1">PDF</a>
                    <a href="{{ path('app_evenement_indexstat') }}" class="btn btn-primary px-3 py-1">stat</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
